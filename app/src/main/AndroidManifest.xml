<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wanghongyun.secondhandtrade">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".base.BaseApplication">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".base.BaseActivity"/>
        <activity android:name=".activity.GoodDetailsActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.AddNewGoodsActivity" android:theme="@style/Theme.Design.Light" />
        <activity android:name=".activity.AddNewDemandActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.LoginActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.Mine.MyDetailsActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.RegisterActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.Mine.MyGoodsActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.Mine.MyCollectionActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.Mine.MyDemandsActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.AboutActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.SearchActivity" android:theme="@style/Theme.Design.Light"/>
        <activity android:name=".activity.UpdatePasswordActivity" android:theme="@style/Theme.Design.Light"/>

    </application>
    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

</manifest>