<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_goods_name"
        android:textSize="18sp"
        android:text="了了了了了了了"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_mid"
        android:layout_below="@id/tv_goods_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:paddingTop="6dp"
            android:id="@+id/tv_goods_description"
            android:text="碧海的哈苏互动顶顶顶顶顶"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_weight="0.618"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:gravity="left"
        android:layout_below="@id/ll_mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_goods_collection_count"
            android:text="312"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@id/tv_goods_collection_count"
            android:id="@+id/temp"
            android:text="收藏"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@id/temp"
            android:id="@+id/tv_goods_comment_count"
            android:text="156"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@id/tv_goods_comment_count"
            android:layout_centerVertical="true"
            android:text="评论"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:text="45"
            android:id="@+id/tv_goods_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/holo_red_light"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:text="元"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>